{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
} 